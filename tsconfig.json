{
  "extends": "@chores/tsconfig",
  "compilerOptions": {
    "lib": ["DOM", "ESNext", "ESNext.Symbol"],
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "ESNext"
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "scripts"]
}
